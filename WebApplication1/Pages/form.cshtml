@page
@model formPageModel
@{
    ViewData["Title"] = "form";
    var personList = Model.Person_List;
    if (Model.Personal.Count != 0)
    {
        personList = Model.Personal;
    }
}

<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input type="text" class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>性別</label>
        <select class="form-control" asp-for="Sex" asp-items="@Html.GetEnumSelectList(typeof(sex))"></select>
    </div>
    <div class="form-group">
        <label asp-for="ID"></label>
        <input type="text" class="form-control" asp-for="ID"/>
        <span asp-validation-for="ID" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success" asp-page-handler="Form2">儲存</button>
</form>

<form method="post">
    <div class="input-group mt-5 w-50">
        <input type="text" class="form-control" asp-for="SearchName" />
        <div class="input-group-append">
            <button type="submit" class="btn btn-outline-secondary" asp-page-handler="Form1">搜尋</button>
            <button type="submit" class="btn btn-success" asp-page="form1">新增</button>
        </div>
    </div>
</form>
<div class="table-hover table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>姓名</th>
                <th>性別</th>
                <th>身分證</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var person in personList)
            {
            <tr>
                <td>@person.name</td>
                <td>@person.sex</td>
                <td>@person.id</td>
            </tr>
            }
        </tbody>
    </table>
</div>
